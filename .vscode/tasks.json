{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Go: Check Error Log or Return",
      "type": "shell",
      "command": "${command:go.buildTags}",
      "windows": {
        "command": "error-log-or-return.exe"
      },
      "linux": {
        "command": "error-log-or-return"
      },
      "osx": {
        "command": "error-log-or-return"
      },
      "args": [
        "./..."
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": false,
        "focus": false,
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": {
        "owner": "go",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    }
  ]
}